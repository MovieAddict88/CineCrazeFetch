<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="AppThemeActionDestils" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="AppThemeActionDestilsNew" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="AppThemeNoAction" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="Theme.ProfileDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="Theme.CastVideosDark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <!-- Action Bar Styles -->
    <style name="ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/black</item>
        <item name="titleTextColor">@color/white</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="CustomActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/black</item>
        <item name="titleTextColor">@color/white</item>
        <item name="elevation">0dp</item>
    </style>

    <!-- Toolbar Styles -->
    <style name="MyDarkToolbarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <!-- Navigation View Style -->
    <style name="NavigationView" parent="Widget.Design.NavigationView">
        <item name="android:background">@color/black</item>
        <item name="itemTextColor">@color/white</item>
        <item name="itemIconTint">@color/white</item>
    </style>

    <!-- Rating Bar Styles -->
    <style name="MyRatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressTint">@color/colorAccent</item>
        <item name="android:secondaryProgressTint">@color/colorAccent</item>
    </style>

    <!-- Cast Controller Styles -->
    <style name="MiniControllerTextAppearace" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Switch Styles -->
    <style name="Color1SwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:thumbTint">@color/colorAccent</item>
        <item name="android:trackTint">@color/dark_gray</item>
    </style>

    <!-- Card Widget Style -->
    <style name="CardWidgetStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/black</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <!-- Spinner Styles -->
    <style name="mySpinnerItemStyle" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
    </style>

    <!-- Progress Bar Styles -->
    <style name="Widget.AppCompat.ProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint">@color/colorAccent</item>
        <item name="android:progressBackgroundTint">@color/dark_gray</item>
    </style>
</resources>